<ui:ContentDialog x:Class="AccountManager.View.DeleteAskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AccountManager.ViewModel"
        xmlns:local="clr-namespace:AccountManager.View"
        xmlns:prop="clr-namespace:AccountManager.Properties"
        mc:Ignorable="d"
        Title="{x:Static prop:Resources.DELETE_ACCOUNT_MSG}"
        PrimaryButtonText="{x:Static prop:Resources.OK}"
        CloseButtonText="{x:Static prop:Resources.CANCEL}"
        DefaultButton="Primary">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="{x:Static prop:Resources.DELETE_ACCOUNT_DESC}"/>
    </StackPanel>
</ui:ContentDialog>
