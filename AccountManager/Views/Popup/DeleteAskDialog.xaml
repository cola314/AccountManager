<ui:ContentDialog
    x:Class="AccountManager.Views.Popup.DeleteAskDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prop="clr-namespace:AccountManager.Properties"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="{x:Static prop:Resources.DELETE_ACCOUNT_MSG}"
    CloseButtonText="{x:Static prop:Resources.CANCEL}"
    DefaultButton="Primary"
    PrimaryButtonText="{x:Static prop:Resources.OK}"
    mc:Ignorable="d">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="{x:Static prop:Resources.DELETE_ACCOUNT_DESC}" />
    </StackPanel>
</ui:ContentDialog>
